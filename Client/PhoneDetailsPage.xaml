<Page x:Class="Client.PhoneDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Подробнее"
      Background="White">

    <Page.Resources>
        <ControlTemplate x:Key="RoundButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                CornerRadius="50"
                Width="50" Height="50">
                <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
    </Page.Resources>

    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Template="{StaticResource RoundButtonTemplate}"
                Background="#EEEEEE"
                Width="50" Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0 0 0 10"
                Click="BackClick">  
                <Image Source="/Resources/back.png" Width="30"/>
            </Button>
            <StackPanel Grid.Row="1" Margin="20">
                <Image x:Name="PhoneImage" Width="200" Height="200" Margin="0 0 0 20"/>
                <TextBlock Text="Название:" FontWeight="Bold"/>
                <TextBlock x:Name="TitleField" Margin="0 0 0 10"/>
                <TextBlock Text="Компания:" FontWeight="Bold"/>
                <TextBlock x:Name="CompanyField" Margin="0 0 0 10"/>
                <TextBlock Text="Цена:" FontWeight="Bold"/>
                <TextBlock x:Name="PriceField" Margin="0 0 0 10"/>
                <TextBlock Text="Описание:" FontWeight="Bold"/>
                <TextBlock x:Name="DescriptionField" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
